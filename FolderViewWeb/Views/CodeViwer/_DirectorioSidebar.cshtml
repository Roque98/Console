@{
}


<li class="treeview">
    <a href="#" onclick="ActualizarUIDirectorio(@Model.DirectorioID)">
        <i class="fa fa-folder"></i> <span>@Model.Nombre</span>
        @if (Model.DirectorioNoVacio)
        {   
            <span class="pull-right-container">
                <i class="fa fa-angle-left pull-right"></i>
            </span>
        }
    </a>
    <ul class="treeview-menu">
        
            
        <partial name="_ArchivoSidebar" model="@Model.Archivos" />
        

        @foreach (var subdirectorio in Model.Subdirectorios)
        {
            <partial name="_DirectorioSidebar" model="subdirectorio" />
        }
    </ul>
</li>

    
